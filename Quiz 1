void loop() {
  // put your main code here, to run repeatedly:

redLED = digitalRead(redLED);
blueLED = digitalRead(blueLED);
greenLED = digitalRead(greemLED);


    digitalWrite(7, LOW);  //turns off LED
    digitalWrite(6, LOW);  //turns off LED
    digitalWrite(5, LOW);  //turns off LED

    If (redLED == HIGH) {
      digitalWrite(5, HIGH);
      digitalWrite(6, LOW);
      digitalWrite(7, LOW);
}


