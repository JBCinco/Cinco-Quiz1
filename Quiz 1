const int redLED = 5;
const int greenLED = 6;
const int blueLED = 7;

  const int redButton = 10; 
  const int greenButton = 9;
  const int blueButton = 8;  


void setup() {
  // put your setup code here, to run once:
pinMode(redLED, OUTPUT);
pinMode(greenLED, OUTPUT);
pinMode(blueLED, OUTPUT);

pinMode(redButton, INPUT_PULLUP); 
pinMode(greenButton, INPUT_PULLUP);
pinMode(blueButton, INPUT_PULLUP);
}

void loop() {
  // put your main code here, to run repeatedly:
buttonPressed();   //calling the function

}

  void buttonPressed() {                   //function with loop in it

 if (digitalRead(redButton) == LOW) {      // reads if button is pressed
 digitalWrite(redLED, HIGH);              //turns on red LED
  }
 else
{
 digitalWrite(redLED, LOW);               //turns off red LED
 }


if(digitalRead(greenButton) == LOW)    // reads if button is pressed
 {
 digitalWrite(greenLED, HIGH);  //turns on green LED
 }
 else
 {
digitalWrite(greenLED, LOW); }      //turns off green LED


 if (digitalRead(blueButton) == LOW)    // reads if button is pressed
 {
 digitalWrite(blueLED, HIGH); //turns on blue LED
  }
 else
 {
 digitalWrite(blueLED, LOW);      //turns off blue LED
  }
    
}
